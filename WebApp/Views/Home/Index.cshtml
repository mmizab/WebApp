@model List<Post>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<!-- ##### BOX DELS PRODUCTES DE CATEGORIA O NO CATEGORIA ##### -->

<div id="custom-container">
    <div id="box-general">
        <div class="data-row-items">
            @foreach (var item in Model)
            {
                <div class="box-product-categoria">
                    <label>Title: @item.Title</label>
                    <div class="box-product-image">
                        <p>BOX.1</p>
                        Aquí anirà una imatge de la tenda o categoria.!
                    </div>
                    <div class="description-box">
                        <a style="color: green;"><span>@item.Content</span></a>
                    </div>
                </div>
            }
        </div>


    </div>


</div>

@model PostDto
@{
    ViewData["Title"] = "Index";
    Layout = "_Admin";
}

<h1>Index</h1>
<form asp-action="CreatePostRazor">
    <input type="hidden" asp-for="@Model.StoreId"/>
    <div>
        <label>Title</label>
        <input type="text" asp-for="@Model.Title" />
    </div>
    <div>
        <label>Content</label>
        <input type="text" asp-for="@Model.Content" value="" />
    </div>
    <div>
        <input type="submit" value="Save" />
    </div>
</form>
